<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Set your desired background color -->
            <corners android:radius="6dp" /> <!-- Optional: Rounded corners -->
        </shape>
    </item>

    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/black" /> <!-- Set your desired border color -->
            <corners android:radius="6dp" /> <!-- Match the corner radius -->
        </shape>
    </item>

</layer-list>